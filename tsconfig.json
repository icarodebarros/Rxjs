{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "ES2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        // "sourceMap": true,
        "target": "es6",
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist/**/*"
    ]
}